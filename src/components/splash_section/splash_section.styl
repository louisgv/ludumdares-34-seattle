@import '../../constants'
centerSize = 320px
cloudSpeed = 100s
planeSpeed = 60s

@keyframes cloud1
  0%
    left 10%
  15%
    left 4%
  30%
    left 20%
  70%
    left 80%
  100%
    left 10%

@keyframes cloud2
  0%
    left 80%
  50%
    left 20%
  100%
    left 80%

@keyframes cloud3
  0%
    left 15%
  50%
    left 110%
  50.0001%
    left -20%
  100%
    left 15%

@keyframes plane
  10%
    left -23%
    top 70%
  20%
    left 105%
    top 40%
  20.0001%
    left -23%

@keyframes titleLogoShake
  0%
    transform scale(1)
  80%
    transform scale(1)
  95%
    transform scale(1.1)

.SplashSection
  height 100 vh
  color white

  .center
    font-family 'Unica One'
    text-align center
    height centerSize
    width centerSize
    position absolute
    left 50%
    top 50%
    margin-left -(centerSize / 2)
    margin-top -(centerSize / 2) - 60px

    .amz
      width 100%
      background white
      border-radius 10px
      padding 10px
      box-shadow 2px 2px #FFFFFF

    .logo
      width 100%
      animation titleLogoShake 20s infinite

    .sign-up
      background #FF8000
      display inline
      border-radius 10px
      font-size 36px
      padding 10px
      box-shadow 2px 2px #FFFFFF

    .subtitle
      text-transform uppercase

      &.date
        margin-top 10px

      &.applications
        margin-top 15px

    .Button
      width 27px
      display inline-block
      // margin 10px auto
      // background colorPink
      // border-bottom-color colorPinkDark

  .skyline
    width 100%
    position absolute
    bottom -10px

  .clouds
    .cloud
      position absolute

      &.form1
        width 150px
        top 25%
        animation cloud1 cloudSpeed infinite

      &.form2
        width 100px
        top 50%
        animation cloud2 cloudSpeed * 1.1 infinite

      &.form3
        width 100px
        top 75%
        animation cloud3 cloudSpeed * 0.9 infinite

  .planes
    .plane
      position absolute
      width 100px
      left -33%
      top 70%
      transform rotate(-10deg)
      animation plane planeSpeed linear infinite

.morning
  background linear-gradient(colorPink, colorPinkLight)

.evening
  background linear-gradient(colorOrange, colorOrangeLight)

.night
  background url('/images/stardust.png')
