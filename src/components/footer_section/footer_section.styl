@import '../../constants'

@keyframes heartbeat
  0%
    transform scale(1)
  14%
    transform scale(1.2)
  28%
    transform scale(1)
  42%
    transform scale(1.3)
  70%
    transform scale(1)

@keyframes logoShake
  0%
    transform scale(1) rotate(0deg)
  80%
    transform scale(1.1) rotate(360deg)
  100%
    transform scale(1) rotate(360deg)

.FooterSection
  .footer
    padding websitePadding
    color colorWhiteDark

  .main.footer
    background colorGray

    @media mediaPhone
      text-align center

    .col
      display inline-block
      width 33.3%
      vertical-align top

      @media mediaPhone
        display block
        width 100%

        &.logo
          margin websitePadding 0

        &.organizers
          .organizers-list
            height inherit

      @media notMediaPhone
        &:first-child
          padding-right websitePadding

        &:last-child
          padding-left websitePadding

      @media notMediaTablet
        &.organizers
          .organizers-list
            height 150px

      &.logo
        text-align center

        .logo
          width 100%
          max-width 220px
          transition transform transitionSpeedSlow

          &:hover
            animation logoShake 2s

      &.organizers
        .organizers-list
          overflow hidden

          li
            display inline-block
            width 50%
            float left

            @media mediaTablet
              display block
              width 100%

      a
        transition color transitionSpeed

        &:hover
          color white

      .title
        font-size fontSizeNormal
        color colorGrayLight
        font-weight 700
        margin-bottom 5px

  .sub.footer
    padding websitePadding * 0.5
    background colorGrayDark
    text-align center
    color white

    .love
      margin-bottom websitePadding * 0.5

      .heart
        cursor pointer
        color colorPinkLight
        transition-property font-size
        transition-duration 1s
        transition-timing-function ease
        animation heartbeat 1.3s infinite

        &:hover
          font-size 40px

    .TOS
      font-size fontSizeSmall
      color colorGrayLight

